        <activity android:name="cz.gattserver.android.drinks.WhiskeyActivity"></activity>
        <activity android:name="cz.gattserver.android.photogallery.PhotogalleriesActivity"></activity>
        <activity android:name="cz.gattserver.android.photogallery.PhotogalleryActivity"></activity>
        <activity android:name="cz.gattserver.android.photogallery.PhotoActivity"></activity>
        <activity android:name="cz.gattserver.android.messages.MessagesActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />

</manifest>