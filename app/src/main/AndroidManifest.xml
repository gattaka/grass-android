            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cz.gattserver.android.recipes.RecipesActivity"></activity>
        <activity android:name="cz.gattserver.android.recipes.RecipeActivity"></activity>
        <activity android:name="cz.gattserver.android.songs.SongsActivity"></activity>
